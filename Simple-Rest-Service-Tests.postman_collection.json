	"item": [
		{
			"name": "hateous-simplerest-tests",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b139040f-3765-4129-930b-6088d78821bf",
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Check if Peter still exists on the database\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"Peter\");",
							"});",
							"",
							"pm.test(\"Check if Same still exists on the database\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"Sam\");",
							"});",
							"",
							"pm.test(\"Check if response time meets the SLA (less than 200ms)\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(200);",
							"});",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"",
							"pm.test(\"Content-Type is present\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"body": {},
				"url": {
